{
    "name": "senior-project",
    "private": true,
    "version": "1.0.0",
    "description": "3d-boats",
    "repository": "https://github.com/cyrillegin/seniorProject",
    "license": "MIT",
    "main": "main.js",
    "author": "Cyrille Gindreau",
    "engines": {
        "node": "8.6.2"
    },
    "scripts": {
        "start": "npm run build:server & npm run build:client & npm run start:server",
        "build:server": "babel src --out-dir dist --copy-files --ignore src/client/",
        "build:client": "webpack --progress --watch --config ./webpack.dev.config.js",
        "start:server": "nodemon --ignore /client/ --exec babel-node src/server",
        "start:prod": "npm run build:prod && npm run start:server",
        "build:prod": "webpack --progress --config ./webpack.prod.config.js",
        "test": "npm run lint && npm run tests",
        "lint": "npm run htmllint && npm run eslint",
        "htmllint": "./node_modules/.bin/htmlhint --config .htmlhintrc.json src",
        "eslint": "./node_modules/.bin/eslint src",
        "tests": "mocha --require babel-register tests/test.js",
        "cover": "node_modules/.bin/babel-node node_modules/.bin/babel-istanbul cover node_modules/.bin/_mocha -- tests/test.js",
        "electron": "electron .",
        "build:osx": "electron-packager . Boat Builder --platform darwin --overwrite",
        "build:linux": "electron-packager . Boat Builder --platform linux --overwrite",
        "build:win32": "electron-packager . Boat Builder --platform win32 --overwrite"
    },
    "dependencies": {
        "@tweenjs/tween.js": "17.2.0",
        "@uirouter/angularjs": "1.0.20",
        "angular": "1.7.3",
        "angular-animate": "1.7.3",
        "angular-aria": "1.7.3",
        "angular-route": "1.7.3",
        "d3": "5.6.0",
        "file-saver": "1.3.8",
        "jquery": "3.3.1",
        "jspdf": "1.4.1",
        "nodemon": "1.18.3",
        "three": "0.95.0"
    },
    "devDependencies": {
        "autoprefixer": "9.1.3",
        "babel-cli": "6.26.0",
        "babel-core": "6.26.3",
        "babel-eslint": "8.2.6",
        "babel-istanbul": "0.12.2",
        "babel-loader": "7.1.5",
        "babel-plugin-angularjs-annotate": "0.9.0",
        "babel-preset-env": "1.7.0",
        "babel-register": "6.26.0",
        "body-parser": "1.18.3",
        "chai": "4.1.2",
        "css-loader": "1.0.0",
        "dotenv": "6.0.0",
        "electron": "2.0.8",
        "electron-packager": "^12.1.1",
        "eslint": "5.4.0",
        "eslint-plugin-import": "2.14.0",
        "exports-loader": "0.7.0",
        "express": "4.16.3",
        "express-session": "1.15.6",
        "extract-text-webpack-plugin": "3.0.2",
        "file-loader": "2.0.0",
        "helmet": "3.13.0",
        "html-loader": "0.5.5",
        "htmlhint": "0.9.13",
        "imports-loader": "0.8.0",
        "jshint": "2.9.6",
        "less": "3.8.1",
        "less-loader": "4.1.0",
        "mocha": "5.2.0",
        "node-sass": "4.9.3",
        "postcss-loader": "3.0.0",
        "precss": "3.1.2",
        "sass-loader": "7.1.0",
        "style-loader": "0.22.1",
        "uglifyjs-webpack-plugin": "1.3.0",
        "url-loader": "1.1.1",
        "webpack": "4.17.1",
        "webpack-bundle-analyzer": "2.13.1",
        "webpack-cli": "3.1.0",
        "webpack-dev-server": "3.1.5"
    }
}
